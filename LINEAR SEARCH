#include <iostream>
using namespace std;

int linear(int arr[], int key, int n) {
    for(int i = 0; i < n; i++) { 
        if(arr[i] == key) {
            return i; }
    return -1; 
}int main() {
    int n, key;
cout << "Enter the value of n: ";
    cin >> n;
 int arr[n];
cout << "Enter " << n << " elements of the array:" << endl;
    for(int i = 0; i < n; i++) {  
        cin >> arr[i];}
 cout << "Enter a value to search in the array: ";
    cin >> key;
 int result = linear(arr, key, n);
 if(result !=-1) {
        cout << "Element is found at index"  <<result << endl;
    } else {
        cout << "Element not found." << endl;
    } return 0;
}
